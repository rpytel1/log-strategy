{
    "name": "FirstLSTM",
    "n_gpu": 1,

    "arch": {
        "type": "WordRNN",
        "args": {
            "embedding_size": 50,
            "batch_size": 30,
            "use_cuda": true,
            "nb_lstm_units": 300,
            "nb_lstm_layers":1
        }
    },
    "data_loader": {
        "type": "CodeWordDataLoader",
        "args":{
            "filename": "all_train_filteredRNN.txt",
            "batch_size": 30,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0,
            "test_filename": "all_test_filteredRNN.txt"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": ["accuracy", "recall"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
