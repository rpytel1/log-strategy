{
  "name": "Code2Vec",
  "n_gpu": 1,
  "arch": {
    "type": "Code2Vec",
    "args": {
      "nodes_dim": 323360,
      "paths_dim": 640501,
      "embedding_dim": 128,
      "output_dim":2,
      "dropout": 0.25
    }
  },
  "data_loader": {
    "type": "Code2VecDataLoader",
    "args": {
      "filename": "preprocessed_code.train.c2v",
      "batch_size": 1024,
      "shuffle": true,
      "validation_split": 0.2,
      "num_workers": 0,
      "test_filename": "preprocessed_code.test.c2v"
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.01,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "cross_entropy_loss",
  "metrics": [
    "accuracy",
    "recall"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboardX": true,
    "log_dir": "saved/runs"
  }
}
