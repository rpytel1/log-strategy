{
    "name": "Code2VecSingleNN",
    "n_gpu": 1,

    "arch": {
        "type": "Code2VecSingleNN",
        "args": {
            "inputSize": 384,
            "hiddenSize": 128,
			"outputSize": 2,
            "use_cuda": true
        }
    },
    "data_loader": {
        "type": "Code2VecLoader",
        "args":{
            "filename": "../code2vec/result/codevectors_labeled_train.txt",
            "batch_size": 50,
            "relativeNrNoLogFunctions": 4,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0,
			"test_filename": "../code2vec/result/codevectors_labeled_test.txt"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": ["accuracy", "recall"],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
