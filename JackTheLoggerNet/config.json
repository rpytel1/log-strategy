{
    "name": "FirstLSTM",
    "n_gpu": 1,

    "arch": {
        "type": "CodeRNN",
        "args": {
            "embedding_size": 10,
            "batch_size": 4,
            "use_cuda": true
        }
    },
    "data_loader": {
        "type": "CodeCharDataLoader",
        "args":{
            "filename": "zookeeper_filteredRNN.txt",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
